<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/avatarProfile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image_avatar"
            app:shapeAppearanceOverlay="@style/roundedImageView" />

        <TextView
            android:id="@+id/txtUserNamePost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:text="Tuấn Đạt"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>
    <TextView
        android:id="@+id/txtContentPost"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:maxLines="3"
        android:layout_marginLeft="20dp"
        android:text="Bài đăng của bảo"
        android:ellipsize="end"
        android:layout_height="wrap_content"/>
    <ViewStub
        android:id="@+id/imgStub"
        android:layout_width="wrap_content"
        android:layout="@layout/image_view"
        android:scaleType="centerCrop"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <!-- ImageView và TextView cho Like -->
        <ImageView
            android:id="@+id/imgLike"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_like"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_alignParentBottom="true" />

        <TextView
            android:id="@+id/txtLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20sp"
            android:layout_toEndOf="@id/imgLike"
            android:layout_alignBottom="@id/imgLike"
            android:layout_marginStart="10dp" />

        <!-- ImageView và TextView cho Comment -->
        <ImageView
            android:id="@+id/imgComment"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="200dp"
            android:src="@drawable/icon_comment"
            android:layout_toEndOf="@id/txtLike"
            android:layout_alignParentBottom="true" />

        <TextView
            android:id="@+id/txtComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20sp"
            android:layout_toEndOf="@id/imgComment"
            android:layout_alignBottom="@id/imgComment"
            android:layout_marginStart="10dp" />

    </RelativeLayout>


</LinearLayout>
