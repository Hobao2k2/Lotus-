<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:id="@+id/addPost">

        <!-- Toolbar được cố định ở trên cùng -->
        <Toolbar
            android:id="@+id/toolbar"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:minHeight="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways"
            android:paddingTop="15dp"
            android:background="@drawable/shape_toolbar_blue">

            <!-- Các thành phần bên trong toolbar -->
            <TextView
                android:id="@+id/cancelTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Huỷ"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/open_sans_semibold"
                android:layout_gravity="start" />

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"
                android:text="Tạo bài viết"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/postTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng"
                android:layout_marginEnd="10dp"
                android:textColor="@color/gray_text"
                android:textSize="18sp"
                android:fontFamily="@font/open_sans_semibold"
                android:layout_gravity="end" />
        </Toolbar>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/bottomBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintVertical_bias="0.0">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/avatarProfile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/image_avatar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/roundedImageView" />

            <!-- Username -->
            <TextView
                android:id="@+id/txtUserNamePost"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="Tuấn Đạt"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/avatarProfile"
                app:layout_constraintTop_toTopOf="@id/avatarProfile" />

            <!-- Nội dung bài viết -->
            <EditText
                android:id="@+id/contentEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="top"
                android:hint="Bạn đang nghĩ gì?"
                android:scrollbars="none"
                android:background="@null"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@+id/avatarProfile" />

            <!-- ImageView để load ảnh khi cần -->
            <ImageView
                android:id="@+id/imgPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/contentEdt" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--        Botombar-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bottom_bar"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="5dp"
            android:padding="17dp">

            <ImageButton
                android:id="@+id/btnImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_image"
                android:background="@null"
                android:scaleType="fitXY"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnCamera"
                app:layout_constraintHorizontal_bias="0.0" />

            <ImageButton
                android:id="@+id/btnCamera"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_camera"
                android:background="@null"
                android:scaleType="fitXY"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btnImage"
                app:layout_constraintEnd_toStartOf="@+id/btnLocation"
                app:layout_constraintHorizontal_bias="0.0" />

            <ImageButton
                android:id="@+id/btnLocation"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_location"
                android:background="@null"
                android:scaleType="fitXY"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btnCamera"
                app:layout_constraintEnd_toStartOf="@+id/btnEmotion"
                app:layout_constraintHorizontal_bias="0.0" />

            <ImageButton
                android:id="@+id/btnEmotion"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_emotion"
                android:background="@null"
                android:scaleType="fitXY"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btnLocation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <!--        Botombar-->

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
