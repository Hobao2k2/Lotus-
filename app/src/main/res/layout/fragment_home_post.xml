<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">


    <!-- Ảnh bên trái -->


    <!-- Đường kẻ dọc không nhìn thấy -->
    <!-- Chiều rộng của đường kẻ dọc có thể điều chỉnh -->


    <!-- LinearLayout chứa các TextView và ImageView -->

    <ImageView
        android:id="@+id/avata"
        android:layout_width="46dp"
        android:layout_height="41dp"
        android:background="@drawable/rounded_corners"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.09" />

    <View
        android:id="@+id/verticalDivider"
        android:layout_width="4dp"
        android:layout_height="285dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/linearLayout"
        app:layout_constraintStart_toEndOf="@id/avata"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_percent="0.1" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="302dp"
        android:layout_height="291dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/verticalDivider"
        app:layout_constraintTop_toTopOf="parent">


        <!-- TextView đầu tiên -->
        <TextView
            android:id="@+id/name"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:text="tên "
            android:textSize="18sp" />


        <!-- TextView thứ hai -->
        <TextView
            android:id="@+id/status"
            android:layout_width="276dp"
            android:layout_height="63dp"
            android:text="status"
            android:textSize="20sp" />


        <!-- Ảnh bên trong LinearLayout -->
        <ImageView
            android:id="@+id/image"
            android:layout_width="276dp"
            android:layout_height="155dp" />

        <LinearLayout
            android:layout_width="274dp"
            android:layout_height="36dp">

            <Button
                android:id="@+id/buttonLike"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/icon_unlike"

                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/like"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:text="10"
                android:textSize="20dp" />

            <Button
                android:id="@+id/buttonCmt"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@color/white"
                android:drawableBottom="@drawable/icon_cmt"
                android:text="Cmt"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/cmt"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:text="30"
                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
