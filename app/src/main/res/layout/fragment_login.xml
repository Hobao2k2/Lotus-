<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    tools:context=".LoginFragment"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_back"
            android:background="@android:color/transparent"
            android:layout_marginStart="5dp"
            android:padding="5dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="75dp"
                android:layout_marginEnd="3dp"
                app:srcCompat="@drawable/lotus_logo" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/lotus" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/dangNhapTaiKhoanVietID"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtPhoneOrEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@drawable/rounded_edittext_gray"
            android:hint="Nhập số điện thoại hoạc email"
            android:textColorHint="@color/gray_text"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordTil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailTil"
            android:layout_marginTop="5dp"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true"
            >
            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_gray"
                android:hint="Mật khẩu"
                android:textSize="15sp"
                android:inputType="textPassword"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_text"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnLoginLotus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Tiếp tục"
            android:background="@drawable/rounded_blue_button"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/tvError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đây không phải số điện thoại, email hợp lệ. Vui lòng nhập lai số điện thoai, email của ban "
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:textColor="@color/red"
            android:fontFamily="@font/open_sans_medium"
            android:layout_gravity="center"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/tvSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng ký tài khoản"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:textColor="@color/blue"
            android:fontFamily="@font/open_sans_medium"
            android:layout_gravity="center"
            android:textStyle="bold"
            />
    </LinearLayout>

</LinearLayout>