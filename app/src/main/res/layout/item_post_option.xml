<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bottom_dialog"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

        <ImageView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_remove_24"
            android:layout_gravity="center|top"
            android:scaleType="centerCrop"
            android:layout_marginBottom="20dp"
            />

        <!-- Lưu bài viết       -->

        <Button
            android:id="@+id/btnSavePost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Lưu bài viết"
            android:drawableStart="@drawable/ic_save_24"
            android:drawablePadding="30dp"
            android:gravity="left"
            android:textSize="18sp"
            android:padding="20dp"
            android:textColor="@color/black"
            />

        <!-- Chia sẻ -->
        <Button
            android:id="@+id/btnSharePost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Chia sẻ"
            android:drawableStart="@drawable/ic_share_24"
            android:drawablePadding="30dp"
            android:gravity="left"
            android:textSize="18sp"
            android:padding="20dp"
            android:textColor="@color/black"
            />

        <!-- Chỉnh sửa -->
        <Button
            android:id="@+id/btnEditPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Chỉnh sửa"
            android:drawableStart="@drawable/ic_edit"
            android:drawablePadding="30dp"
            android:gravity="left"
            android:textSize="18sp"
            android:padding="20dp"
            android:textColor="@color/black"
            />

        <!-- Xóa -->
        <Button
            android:id="@+id/btnDeletePost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Xóa"
            android:drawableStart="@drawable/ic_delete"
            android:drawablePadding="30dp"
            android:gravity="left"
            android:textSize="18sp"
            android:padding="20dp"
            android:textColor="@color/black"
             />

    </LinearLayout>

