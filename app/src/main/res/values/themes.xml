<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Lotus" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:textColor">@color/black</item> <!-- Màu chữ mặc định -->
        <item name="buttonStyle">@style/NoShadowButton</item> <!-- Áp dụng kiểu nút -->
        <!--        <item name="android:windowFullscreen">true</item>-->

    </style>


    <style name="NoShadowButton" parent="Widget.AppCompat.Button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/black
        </item> <!-- Đảm bảo màu chữ mặc định của nút là đen -->
    </style>

    <style name="Theme.Lotus" parent="Base.Theme.Lotus" />

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="BottomSheetStyle"  parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle" >@style/BottomSheetStyle</item>
    </style>

</resources>